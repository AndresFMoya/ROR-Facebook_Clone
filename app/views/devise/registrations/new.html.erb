<div class="sign-back clearfix">
  <div class="sign-left">
    <h2>Connect with friends and the
  world around you on Facebook.</h2><br><br>
    <p><strong>See photos and updates</strong> from friends in News Feed.</p><br><br>
    <p><strong>Share what's new</strong> in your life on your Timeline.</p><br><br>
    <p><strong>Find more</strong> of what you're looking for with Facebook Search.</p>
  </div>
  <div class="sign-right">
    <h2>Sign up</h2>
    <p>Itâ€™s quick and easy.</p><br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-area" %>
      </div><br />

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-area" %>
      </div><br />

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-area" %>
      </div><br />

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-area" %>
      </div><br />

      <div class="field">
        <%= f.submit "Sign up", class: "btn su-btn" %>
      </div><br />
    <% end %>

    <div class = "field">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
